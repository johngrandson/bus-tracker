{
  "name": "bus-tracker",
  "author": {
    "name": "Jo√£o Netto <fleyefilms@gmail.com>"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "start:container": "./bin/init.sh",
    "start:services": "concurrently \"pnpm start:location\" \"pnpm start:payment\"",
    "start:location": "dotenv -e ./location-service/.env -- pnpm --filter location-service start:dev",
    "start:payment": "dotenv -e ./payment-service/.env -- pnpm --filter payment-service start:dev",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint",
    "test": ""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.4.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "src/**/*": [
      "pnpm format",
      "pnpm lint"
    ]
  },
  "engines": {
    "node": "^v22.12.0"
  }
}
